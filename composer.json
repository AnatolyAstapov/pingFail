{
    "name"        : "cilex/cilex",
    "description" : "php service for monitoring sites status based on cilex",
    "keywords"    : ["ping-fail","cli"],
    "homepage"    : "https://github.com/AnatolyAstapov/pingFail",
    "license"     : "MIT",

    "autoload" : {
        "psr-4" : { "Cilex\\": "src/Cilex" }
    },


    "require" : {
        "php"                      : ">=5.5.9",
        "pimple/pimple"            : "^3.0",
        "silex/api"                : "^2.0",
        "symfony/process"          : "^2.7 || ^3.0",
        "symfony/console"          : "^2.7 || ^3.0",
        "symfony/config"          : "^2.7 || ^3.0",
        "symfony/event-dispatcher" : "^2.7 || ^3.0",
        "symfony/finder":                 "~2.1",
        "cilex/console-service-provider": "1.*",
        "monolog/monolog": "^1.22",
        "txthinking/mailer": "^1.4",
        "maknz/slack": "^1.7"
    },

    "require-dev" : {
        "phpunit/phpunit" : "~3.7"
    },

    "suggest" : {
        "symfony/yaml"      : "^2.7 || ^3.0",
        "symfony/validator" : "^2.7 || ^3.0"
    },

    "extra" : {
        "branch-alias" : {
            "dev-develop": "2.x-dev"
        }
   }
}
